<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DefineEmergency">


  <EditText
      android:id="@+id/emerNum2"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="340dp"
      android:ems="10"
      android:hint="Contact number"
      android:inputType="number"
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/emerNum3"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="292dp"
      android:ems="10"
      android:hint="Contact number"
      android:inputType="number"
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="match_parent"
      android:layout_height="78dp"
      android:background="@drawable/dropshadowitem"
      android:fontFamily="@font/open_sans_bold"
      android:paddingLeft="20dp"
      android:paddingTop="25dp"
      android:text="Define Emergency"
      android:textAlignment="viewStart"
      android:textColor="#FFFFFF"
      android:textSize="25dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="200dp"
      android:text="Emergency contact: "
      android:textColor="@color/black"
      android:textSize="18dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="100dp"
      android:fontFamily="@font/open_sans_bold"
      android:text="Emergency name: "
      android:textColor="@color/black"
      android:textSize="18dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/emerName"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="136dp"
      android:ems="10"
      android:hint="Example: Office"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/emerNum"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="240dp"
      android:ems="10"
      android:hint="Contact number"
      android:inputType="number"
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/emerDesc"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="444dp"
      android:ems="10"
      android:hint="Example: Boss is here"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="412dp"
      android:text="Emeregncy Message: "
      android:textColor="@color/black"
      android:textSize="18dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/button2"
      android:layout_width="200dp"
      android:layout_height="57dp"
      android:background="@drawable/dropshadowitem"
      android:text="Add Emergency"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.945" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="101dp"
      android:layout_height="31dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="528dp"
      android:hint="Share location"
      android:text=""
      android:textColor="@color/black"
      android:textColorHint="#808080"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Switch
      android:id="@+id/switch1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="516dp"
      android:minHeight="48dp"
      android:text="Send Location details"
      android:textColor="@color/black"
      app:layout_constraintStart_toEndOf="@+id/textView10"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
